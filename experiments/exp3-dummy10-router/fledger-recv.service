[Unit]
Description=Fledger node
After=network.target

[Service]
Type=oneshot
ExecStart=/root/fledger --config /root/flnode -v -s ws://${FLEDGER_FLSIGNAL_HOST}:8765 --disable-turn-stun simulation recv-chat --print-new-messages ${FLEDGER_RECV_MSG}
RemainAfterExit=yes
User=root
EnvironmentFile=/root/env.systemd
StandardOutput=append:/var/log/fledger-recv

[Install]
WantedBy=multi-user.target
