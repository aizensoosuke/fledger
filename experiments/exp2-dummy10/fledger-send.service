[Unit]
Description=Fledger node
After=network.target

[Service]
Type=oneshot
ExecStart=/root/fledger --config /root/flnode -vvv -s ws://${FLEDGER_FLSIGNAL_HOST}:8765 --disable-turn-stun --send-chat-msg ${FLEDGER_SEND_MSG}
RemainAfterExit=yes
User=root
EnvironmentFile=/root/env.systemd
StandardOutput=append:/var/log/fledger-send

[Install]
WantedBy=multi-user.target
