[Unit]
Description=Fledger node
After=network.target

[Service]
Type=oneshot
ExecStart=/root/fledger --config /root/flnode -vvv -s ws://${FLEDGER_FLSIGNAL_HOST}:8765 --disable-turn-stun --print-new-messages --recv-chat-msg ${FLEDGER_RECV_MSG} --timeout 10
RemainAfterExit=yes
User=root
EnvironmentFile=/root/env.systemd

[Install]
WantedBy=multi-user.target
